{
    "name": "drizzle-test",
    "module": "src/index.ts",
    "type": "module",
    "scripts": {
        "dev": "bun --watch src/index.ts",
        "build": "bun build src/index.ts",
        "start": "NODE_ENV=production bun src/index.ts",
        "test": "bun test",
        "migrate": "bun src/database/migrate.ts",
        "generate": "bunx drizzle-kit generate",
        "check-updates": "bun scripts/update-monitor.ts",
        "validate": "bun build src/index.ts --target=bun --outfile=/tmp/validation.js && bun test src/test/basic.test.ts src/test/migration.test.ts && bunx tsc --noEmit"
    },
    "devDependencies": {
        "@types/bun": "^1.2.18",
        "@types/pg": "^8.15.4",
        "drizzle-kit": "0.31.4",
        "prettier": "^3.6.2",
        "typescript": "^5.8.3"
    },
    "peerDependencies": {
        "typescript": "5.8.3"
    },
    "dependencies": {
        "drizzle-orm": "0.44.2",
        "elysia": "^1.3.5",
        "pg": "^8.16.3"
    }
}
